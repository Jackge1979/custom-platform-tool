{
  "compilerOptions": {
    /** 不同node版本在使用ts-jest时，要求的配置不同*/
    "lib": ["ES2019", "dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "target": "ES2019",
    // "lib": ["dom", "dom.iterable", "esnext"],
    // "module": "esnext",
    // "target": "esnext",
    "baseUrl": "./",
    "outDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react"
  },

  "include": ["./packages"],
  "exclude": ["src/**/test/*", "src/**/demo/*"]
}
