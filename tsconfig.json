{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react"
  },

  "include": ["./packages"],
  "exclude": ["src/**/test/*", "src/**/demo/*"]
}
