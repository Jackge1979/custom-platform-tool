{
  "name": "custom-platform-tool",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/provider-app-hub/*",
    "packages/iub-dsl/*",
    "packages/engine/*",
    "packages/infrastructure/*",
    "packages/consumer-app/*"
  ],
  "scripts": {
    "pull:all": "git pull origin master --rebase",
    "lerna:bootstrap": "lerna bootstrap",
    "start:all": "lerna run --parallel --stream start",
    "start:provider-app": "cd ./packages/provider-app-hub/EntryHall && npm start",
    "start:visual-editor": "cd ./packages/engine/visual-editor && npm start",
    "start:page-designer": "cd ./packages/provider-app-hub/PageDesigner && npm start",
    "start:auth": "cd ./packages/provider-app-hub/AuthManager && npm start",
    "start:consumer-app": "cd ./packages/consumer-app/web-client && npm start",
    "build:provider-app": "minictl build",
    "build:visual-editor-app": "cd ./packages/engine/visual-editor && npm run build",
    "prettier:base": "prettier --parser typescript",
    "format": "npm run prettier:base -- --write \"packages/**/*.{ts,tsx}\"",
    "test": "jest --coverage",
    "test:auth": "jest ./packages/provider-app-hub/AuthManager/src --coverage",
    "commit": "git-cz"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "lerna": "^3.21.0",
    "prettier": "^2.0.5",
    "commitizen": "^4.1.2",
    "@commitlint/cli": "^7.4.0",
    "@commitlint/config-conventional": "^7.3.1",
    "cz-customizable": "^6.2.1",
    "husky": "^1.3.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  },
  "author": "SANGET",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SANGET/custom-platform-tool.git"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "react-router-dom": "^5.2.0"
  }
}
